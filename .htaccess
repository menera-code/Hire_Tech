<IfModule mod_rewrite.c>
    RewriteEngine On

    # Serve existing files or directories directly
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # Otherwise, route everything else to index.html
    RewriteRule ^ index.html [L]
</IfModule>
